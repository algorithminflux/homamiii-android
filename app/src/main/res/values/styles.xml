<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CreatureDetail">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">24sp</item>
    </style>

    <!-- Inherit from CreatureDetail style -->
    <style name="CreatureDetail.Data">
        <item name="android:textColor">@color/forestGreen</item>
    </style>

    <!-- Inherit from CreatureDetail style -->
    <style name="CreatureDetail.Label">
        <item name="android:paddingRight">10sp</item>
    </style>

    <style name="LinearLayoutHorizontal">
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
</resources>
